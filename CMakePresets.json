{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default general",
      "cacheVariables": {
        "COUNTOF_NS_SHORT_EXAMPLE": "OFF",
	"COUNTOF_NS_EXAMPLES": "ON",
	"COUNTOF_NS_TESTS": "ON",
	"COUNTOF_NS_COMPARISONS": "OFF",
	"COUNTOF_NS_DOCTESTS": "ON",
        "TAC_ENABLE_WARNINGS": "OFF",
        "TAC_POSITIVE_WERROR": "OFF"
      }
    },
    {
      "name": "doc",
      "displayName": "Docs check",
      "inherits": "default",
      "cacheVariables": {
	"COUNTOF_NS_EXAMPLES": "OFF",
	"COUNTOF_NS_TESTS": "OFF"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug checks",
      "inherits": "default",
      "cacheVariables": {
	"CMAKE_BUILD_TYPE": "Debug",
        "TAC_ENABLE_WARNINGS": "ON",
        "TAC_POSITIVE_WERROR": "ON"
      }
    },
    {
      "name": "cmp",
      "displayName": "Comparisons number methods",
      "inherits": "default",
      "cacheVariables": {
        "COUNTOF_NS_COMPARISONS": "ON"
      }
    },
    {
      "name": "verbose-cmp",
      "displayName": "Comparisons number methods",
      "inherits": "cmp",
      "cacheVariables": {
	"CMAKE_BUILD_TYPE": "Debug",
        "TAC_ENABLE_WARNINGS": "ON"
      }
    }
  ]
}
